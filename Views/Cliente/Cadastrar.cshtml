@model ClienteModel 
@{
    if(Context.Request.RouteValues.ContainsKey("id"))
    {
        ViewBag.Subtitulo = "Alteração de Cliente";
    }
    else
    {
        ViewBag.Subtitulo = "Cadastro de Cliente";
    }
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<form asp-action="Cadastrar">
    <input type="hidden" asp-for="@Model.IdUsuario">
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Nome">Nome: </label>
        <input type="text" asp-for="@Model.Nome" class="form-control col-sm-8 col-lg-4" autofocus>
        <span asp-validation-for="@Model.Nome" class="text-danger"></span> 
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.CPF">CPF: </label>
        <input type="text" asp-for="@Model.CPF" class="form-control col-sm-8 col-lg-4">
        <span asp-validation-for="@Model.CPF" class="text-danger"></span> 
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Email">Email: </label>
        <input type="email" asp-for="@Model.Email" class="form-control col-sm-8 col-lg-4">
        <span asp-validation-for="@Model.Email" class="text-danger"></span> 
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.DataNascimento">Data de Nascimento: </label>
        <input type="date" asp-for="@Model.DataNascimento" class="form-control col-sm-8 col-lg-4">
        <span asp-validation-for="@Model.DataNascimento" class="text-danger"></span> 
    </div>
    @if(!Context.Request.RouteValues.ContainsKey("id"))
    {
        <div class="w-100">
            <div class="form-group col-sm-8 col-lg-4">
                <label asp-for="@Model.Senha">Senha:</label>
                <input asp-for="@Model.Senha" class="form-control" type="password">
                <span asp-validation-for="@Model.Senha" class="text-danger"></span>
            </div>
        </div>
    }
    else
    {
        <!--Implementação perigosa, isso deixa a senha em texto puro durante o carregamento da página 
        <input type="hidden" asp-for="@Model.Senha">
        -->
    }
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
</form>

