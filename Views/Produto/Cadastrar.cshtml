@model ProdutoModel 
@{
    if(Context.Request.RouteValues.ContainsKey("id"))
    {
        ViewBag.Subtitulo = "Alteração de Produto";
    }
    else
    {
        ViewBag.Subtitulo = "Cadastro de Produto";
    }
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<form asp-action="Cadastrar">
    <input type="hidden" asp-for="@Model.idProduto">
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Nome">Nome: </label>
        <input type="text" asp-for="@Model.Nome" class="form-control" autofocus>
        <!-- asp-validation-for = define uma mensagem de erro caso o campo nao seja preenchido corretamente-->
        <span asp-validation-for="@Model.Nome" class="text-danger"></span> 
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.IdCategoria">Categoria: </label>
        <!-- populando o select com asp-items -->
        <select asp-for="@Model.IdCategoria" class="form-control" asp-items="@(IEnumerable<SelectListItem>)ViewBag.Categorias"></select>
        <!-- asp-validation-for = define uma mensagem de erro caso o campo nao seja preenchido corretamente-->
        <span asp-validation-for="@Model.IdCategoria" class="text-danger"></span> 
    </div>
    <div class="form-group col-sm-8 col-lg-2">
        <label asp-for="@Model.Estoque">Estoque: </label>
        <input asp-for="@Model.Estoque" class="form-control" autofocus>
        <!-- asp-validation-for = define uma mensagem de erro caso o campo nao seja preenchido corretamente-->
        <span asp-validation-for="@Model.Estoque" class="text-danger"></span> 
    </div>
    <div class="form-group col-sm-8 col-lg-2">
        <label asp-for="@Model.Preco">Preço: </label>
        <input asp-for="@Model.Preco" class="form-control" autofocus>
        <!-- asp-validation-for = define uma mensagem de erro caso o campo nao seja preenchido corretamente-->
        <span asp-validation-for="@Model.Preco" class="text-danger"></span> 
    </div>
    
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
</form>

